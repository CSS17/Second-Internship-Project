<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/frame4"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >
        <TextView
            android:id="@+id/dates"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Zaman"
            android:paddingTop="30dp"
            android:textAlignment="center"
            android:background="@drawable/frame2"
            android:textColor="@color/black"
            ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/frame"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/frame3"
                android:text="MaÃ§lar"
                android:textAlignment="center"
                android:id="@+id/matches"
                android:textColor="@color/black"
                ></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/frame"
                >

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text="1"
                    android:paddingLeft="20dp"
                    android:background="@drawable/frame"
                    android:layout_weight="1"></TextView>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text="X"
                    android:paddingLeft="20dp"
                    android:background="@drawable/frame"
                    android:layout_weight="1"></TextView>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text="2"
                    android:paddingLeft="20dp"
                    android:background="@drawable/frame"
                    android:layout_weight="1"></TextView>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text="2.5 -"
                    android:paddingLeft="20dp"
                    android:background="@drawable/frame"
                    android:layout_weight="1"></TextView>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:text="2.5 +"
                    android:paddingLeft="20dp"
                    android:background="@drawable/frame"
                    android:layout_weight="1"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                >

               <TextView
                   android:id="@+id/ratio1"
                   android:layout_width="60dp"
                   android:layout_height="50dp"
                   android:text="Oran 1"
                   android:textAlignment="center"
                   android:background="@drawable/frame"
                   android:layout_weight="1"></TextView>
                <TextView
                    android:id="@+id/ratioX"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="Oran X"
                    android:textAlignment="center"
                    android:background="@drawable/frame"
                    android:layout_weight="1"></TextView>
                <TextView
                    android:id="@+id/ratio2"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="Oran 2"
                    android:textAlignment="center"
                    android:background="@drawable/frame"
                    android:layout_weight="1"></TextView>
                <TextView
                    android:id="@+id/ratio2.5plus"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="Oran 2.5-"
                    android:textAlignment="center"
                    android:background="@drawable/frame"
                    android:layout_weight="1"></TextView>
                <TextView
                    android:id="@+id/ratio2.5minus"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:text="Oran 2.5+"
                    android:textAlignment="center"
                    android:background="@drawable/frame"
                    android:layout_weight="1"></TextView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>